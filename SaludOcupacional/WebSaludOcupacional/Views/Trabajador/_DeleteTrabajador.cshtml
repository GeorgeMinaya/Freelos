
@using Salud.Ocupacional.BE;
@model TrabajadorBE.ResponseTrabajadorBE

@using (Ajax.BeginForm("DeleteTrabajador", "Trabajador"
    , new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "frmTrabajadorD" }
    , new { id = "frmTrabajadorD", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-Alert-Confirm">
        <div class="col-md-11">
            <div class="modal-title letra-acl Alert-Head" id="myModalLabel">
                <i class="fa mdi mdi-delete"></i> Confirmación de Eliminar
            </div>
        </div>
        <div class="col-md-1">
            <button type="button" class="close Alert-Head" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    </div>
    <div class="modal-body">
        <h5 class="modal-title letra-marron" id="myModalLabel">
            Esta seguro de eliminar al Trabajador <strong>@Model.Name</strong> con el DNI <strong>@Model.DNIemployee</strong>
        </h5>
        @Html.TextBoxFor(m => m.IdTrabajador, new { value = @Model.IdTrabajador, @class = "HiddenFor" })
        @Html.TextBoxFor(m => m.Activo, "false", new { @class = "HiddenFor" })
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Eliminar</button>
    </div>
}

