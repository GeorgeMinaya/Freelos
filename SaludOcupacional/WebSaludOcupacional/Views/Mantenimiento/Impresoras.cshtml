        <div class="col-md-offset-1 col-md-10 panel-body">
            <table class="table table-hover" id="tbUsurios">
                <thead>
                    <tr>
                        <th class="contenido-rojo">Descripcion</th>
                        <th class="contenido-rojo">IP</th>
                        <th class="contenido-rojo">Centro</th>
                        <th class="contenido-rojo"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.lImpresoras)
                    {
                    <tr class="odd">
                        <td class="letra-marron">@r.Descripcion</td>
                        <td class="letra-marron">@r.IP</td>
                        <td class="letra-marron">@r.Centro.Nombre</td>
