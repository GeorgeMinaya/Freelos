            <button type="button" class="btn btn-danger btn-sm custom-btn" id="regNuevo" name="regNuevo"
                    data-targeturl="@Url.Action("RegistrarImpresora", "Mantenimiento")">
                <i class="fa fa-plus"></i> Agregar
            </button>
        </div>
