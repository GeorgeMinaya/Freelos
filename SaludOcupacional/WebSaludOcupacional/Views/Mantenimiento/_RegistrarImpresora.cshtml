<script type="text/javascript">

    $(document).ready(function () {
      //$('#asistente').smartWizard({
          //labelNext: 'Adelante',
          //labelPrevious: 'Atrás',
          //labelFinish: 'Grabar',
          //onFinish: onFinish,
          //onShowStep: onShowStep
      //});

      //$(".buttonNext").addClass("btn btn-danger btn-sm");
      //$(".buttonPrevious").addClass("btn btn-danger btn-sm");
      //$(".buttonFinish").addClass("btn btn-danger btn-sm");
        $("#Registrar").click(function () {
            Registrar()
        })
    });

    function Registrar() {
        if ($('#Descripcion').val() != '' && $('#IP').val() != '') {
            var sDescripcion = $('#Descripcion').val();
            var sIP = $('#IP').val();

            $.getJSON(
                '@Url.Action("RegistrarImpresora", "mantenimiento")', // <-- cuando es json solo funciona con minuscula
                { 'sDescripcion': sDescripcion, 'sIP': sIP },
                function (data) {
                    //debugger;
                    if (data) {
                        $('#txtNombreLogin').val(data.NombreLogin);
                        $('#txtNombreLogin').prop("disabled", true);
                    }
                    else {
                        $('#txtNombreLogin').val("");
                        $('#txtNombreLogin').prop("disabled", false);
                    }//$(".buttonNext").click();
                });
        }
    }

    function onFinish() {
        //debugger;
        if ($('#TxtDescripcion').val() != '' && $('#TxtIP').val() != '') {
            $('#frmReg').submit();
        }
        else {
            //$('span').text("No se ha ingresado todos los campos").show().fadeOut(1500);
            event.preventDefault();
        }
    }

</script>
