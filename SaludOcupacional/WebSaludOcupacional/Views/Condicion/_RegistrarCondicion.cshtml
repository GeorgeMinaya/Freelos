
@using Salud.Ocupacional.BE;
@model CondicionBE.ResponseCondicionBE

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Script/WizardJs")

@using (Ajax.BeginForm("RegistrarCondicion", "Condicion"
    , new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "frmCondicionR" }
    , new { id = "frmCondicionR", enctype = "multipart/form-data" }))
{
    <div class="modal-register">
        <div class="col-md-11">
            <div class="modal-title letra-acl Alert-Head" id="myModalLabel">
                <i class="mdi Alert-Head mdi-chemical-weapon"></i> Registrar una nueva condición
            </div>
        </div>
        <div class="col-md-1">
            <button type="button" class="close Alert-Head" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    </div>
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div id="asistente" class="form_wizard wizard_horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon contenido-rojo"><span class="mdi mdi-relative-scale" aria-hidden="true"></span></span>
                                    @Html.TextBoxFor(m => m.WorkCondition, new { value = "", autocomplete = "new-password", @placeholder = "Nombre condición", @class = "form-control", @id = "txtCondicion", @Title = "Condición" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="ValidaInputs('frmCondicionR');" class="btn btn-danger"><i class="fa fa-save"></i> Guardar</button>
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.Message != null)
        {
            <span class="field-validation-error">@ViewBag.Message</span>
        }
    </div>
    @Html.TextBoxFor(m => m.Activo, "True", new { @class = "HiddenFor" })

}