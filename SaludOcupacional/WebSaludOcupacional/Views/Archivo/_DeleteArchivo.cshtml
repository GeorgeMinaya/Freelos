
@using Salud.Ocupacional.BE;
@model ArchivoBE.ResponseArchivoBE

@using (Ajax.BeginForm("DeleteArchivo", "Archivo"
    , new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "frmArchivo" }
    , new { id = "frmArchivo", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-Alert-Confirm">
        <button type="button" class="close Alert-Head" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="modal-title Alert-Head" id="myModalLabel">
            <i class="fa fa-gear"></i> Confirmación de Eliminar
        </div>
    </div>
    <div class="modal-body">
        <h5 class="modal-title letra-marron" id="myModalLabel">
            Esta seguro de eliminar a la Archivo
        </h5>
        @*@Html.TextBoxFor(m => m.IDCompany, new { value = @Model.IDCompany, @class = "HiddenFor" })*@
        @Html.TextBoxFor(m => m.Activo, "false", new { @class = "HiddenFor" })
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Eliminar</button>
    </div>
}

