
@using Salud.Ocupacional.BE;
@model OcupacionBE.ResponseOcupacionBE

@using (Ajax.BeginForm("DatosOcupacion", "Ocupacion"
    , new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "frmOcupacionM" }
    , new { id = "frmOcupacionM", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-modificar">
        <div class="col-md-11">
            <div class="modal-title letra-acl Alert-Head" id="myModalLabel">
                <i class="mdi Alert-Head mdi-file-find"></i> Editar ocupación
            </div>
        </div>
        <div class="col-md-1">
            <button type="button" class="close Alert-Head" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon contenido-rojo"><span class="mdi mdi-relative-scale" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(m => m.Occupation, new { value = "", autocomplete = "new-password", @placeholder = "Ocupación", @class = "form-control", @id = "txtOcupacion", @Title = "Ocupación" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" onclick="ValidaInputs('frmOcupacionM');" class="btn btn-danger"><i class="fa fa-save"></i> Guardar</button>
    </div>
    @*@Html.TextBoxFor(m => m.IDCompany, new { value = @Model.IDCompany, @class = "HiddenFor" })
        @Html.TextBoxFor(m => m.Activo, "true", new { value = "true", @class = "HiddenFor" })*@
}
